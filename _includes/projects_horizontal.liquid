<div class="project-featured mb-5">
  <header class="project-header text-center">
    <h2 class="project-title"><a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">{{ project.title }}</a></h2>
    {% if project.subtitle %}<p class="project-subtitle text-muted">{{ project.subtitle }}</p>{% endif %}
    <hr class="project-divider">
  </header>

  <div class="row g-4 align-items-start project-row">
    <div class="col-12 col-md-6">
      {% if project.video %}
        <div class="project-media ratio ratio-16x9">
          {{ project.video | markdownify }}
        </div>
      {% elsif project.img or project.image %}
        {% assign _img = project.img | default: project.image %}
        {% include figure.liquid path=_img alt=project.title class="project-image img-fluid" %}
      {% endif %}

      <ul class="project-links list-unstyled mt-3">
        {% if project.slide %}<li class="project-link-item">▸ <a href="{{ project.slide }}">Slide presentation</a></li>{% endif %}
        {% if project.paper %}<li class="project-link-item">▸ <a href="{{ project.paper }}">Publication link</a></li>{% endif %}
        {% if project.demo %}<li class="project-link-item">▸ <a href="{{ project.demo }}">Demo</a></li>{% endif %}
        {% if project.repo %}<li class="project-link-item">▸ <a href="{{ project.repo }}">Code / Repo</a></li>{% endif %}
        {% if project.links %}
          {% for l in project.links %}
            <li class="project-link-item">▸ <a href="{{ l.url }}">{{ l.title }}</a></li>
          {% endfor %}
        {% endif %}
      </ul>
    </div>

    <div class="col-12 col-md-6">
      <div class="project-desc">
        {{ project.excerpt | default: project.content | strip_html | markdownify }}
      </div>
    </div>
  </div>
</div>
